{
	"$schema": "https://biomejs.dev/schemas/1.3.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"include": ["src"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}
